/* pages/detail/childCpns/w-comment-info/w-comment-info.wxss */
.comment-info {
  padding: 0 20rpx;
  border-bottom: 10rpx solid #eee;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 4rpx solid #eee;
  line-height: 80rpx;
  font-size: 32rpx;
}

.comment-header .more {
  font-size: 30rpx;
}

.comment-body {
  font-size: 28rpx;
}

.comment-body .user {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.user .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user .name {
  font-size: 32rpx;
}

.comment-body .other {
  margin: 20rpx 0;
}

.other .date {
  margin-right: 20rpx;
}
