<!--pages/detail/detail.wxml-->
<scroll-view scroll-y class="detail">
  <w-swiper images="{{topImages}}" class="detail-swiper"></w-swiper>
  <w-item-info itemInfo="{{itemInfo}}"></w-item-info>
  <w-shop-info shopInfo="{{shopInfo}}"></w-shop-info>
  <w-detail-info detailInfo="{{detailInfo}}"></w-detail-info>
  <w-param-info paramInfo="{{paramInfo}}"></w-param-info>
  <w-comment-info commentInfo="{{commentInfo}}"></w-comment-info>
  <w-recommend-info recommendInfo="{{recommendInfo}}"></w-recommend-info>
</scroll-view>
<w-bottom-bar bind:addtocart="addCart"></w-bottom-bar>